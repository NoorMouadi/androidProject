<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/coffee_dark"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your finances calmly"
        android:textSize="14sp"
        android:textColor="@color/coffee_hint"
        android:layout_marginBottom="32dp"/>

    <!-- Illustration -->

    <!-- Login Button (outline style) -->
    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Welcome Image"
        android:src="@drawable/welcome" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="@color/coffee_dark"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="16dp"
        android:padding="14dp"/>

    <!-- Sign Up Button (filled) -->
    <Button
        android:id="@+id/signupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/coffee_dark"
        android:backgroundTint="@color/white"
        android:padding="14dp"/>


</LinearLayout>
