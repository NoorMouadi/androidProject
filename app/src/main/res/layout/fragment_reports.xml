<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reports_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".fragments.ReportsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Period selector -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Period"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerReportPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:entries="@array/report_periods" />

        <Button
            android:id="@+id/btnGenerateReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Report"
            android:layout_marginTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#DDDDDD" />

        <!-- Summary -->
        <TextView
            android:id="@+id/tvTotalIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Income: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTotalExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Expenses: 0"
            android:textSize="16sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance: 0"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/tvChartsPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Charts will appear here)"
            android:textAlignment="center"
            android:padding="20dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
